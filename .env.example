# API Keys Configuration
# Copy this file to .env and add your actual API keys
# The .env file is gitignored and will not be committed

# ============================================================================
# LLM Provider API Keys
# ============================================================================

# OpenRouter API Key (RECOMMENDED - Standard for ReAlign)
# Get yours at: https://openrouter.ai/keys
# Supports 100+ models with unified API
OPENROUTER_API_KEY=sk-orxxxxxxx

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-xxxxx

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxx

# GitHub Token (for gh CLI automation)
GITHUB_TOKEN=ghp_xxxx

# ============================================================================
# GitHub Auto-Tracking Configuration
# ============================================================================

# Enable automatic GitHub issue creation from test failures and GenAI findings
GITHUB_AUTO_TRACK_ISSUES=true

# Create issues before pushing to GitHub (recommended)
GITHUB_TRACK_ON_PUSH=true

# Minimum priority to auto-track (low/medium/high)
# high = Only critical bugs auto-tracked
# medium = Bugs and important findings
# low = Everything auto-tracked
GITHUB_TRACK_THRESHOLD=high

# Dry run mode (true = preview only, false = actually create issues)
GITHUB_DRY_RUN=false

# ============================================================================
# Optional: Model Preferences
# ============================================================================

# Default provider (anthropic or openai)
# If not set, will auto-detect based on which API key is available
# LLM_PROVIDER=anthropic

# ============================================================================
# Git Automation Settings (Issue #72 completion - v3.16.0)
# ============================================================================

# Enable automatic git operations after /auto-implement
AUTO_GIT_ENABLED=true

# Enable automatic push to remote
AUTO_GIT_PUSH=true

# Enable automatic PR creation (requires gh CLI)
AUTO_GIT_PR=false

# ============================================================================
# MCP Auto-Approval Settings (v3.21.0+)
# ============================================================================

# Enable automatic tool approval for trusted subagent operations
# Reduces permission prompts from 50+ to 0 during /auto-implement workflows
# Required for unattended batch processing
MCP_AUTO_APPROVE=true
BRAVE_API_KEY=BSAT9_xxxxx

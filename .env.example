# API Keys Configuration
# Copy this file to .env and add your actual API keys
# The .env file is gitignored and will not be committed

# ============================================================================
# LLM Provider API Keys
# ============================================================================

# OpenRouter API Key (RECOMMENDED - Standard for ReAlign)
# Get yours at: https://openrouter.ai/keys
# Supports 100+ models with unified API
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# GitHub Personal Access Token (for gh CLI automation - optional)
# Get yours at: https://github.com/settings/tokens
# Required scopes: 'repo', 'workflow', 'write:discussion'
# Used for: /issue command, /pr-create command, auto-tracking, gh CLI
GITHUB_TOKEN=ghp_your-token-here

# ============================================================================
# GitHub Auto-Tracking Configuration (Optional)
# ============================================================================

# Enable automatic GitHub issue creation from test failures and GenAI findings
# When enabled, issues are created automatically when you push code
# Default: false (manual /issue command only)
GITHUB_AUTO_TRACK_ISSUES=false

# Create issues before pushing to GitHub (recommended if auto-tracking enabled)
# Default: true
GITHUB_TRACK_ON_PUSH=true

# Minimum priority to auto-track (low/medium/high)
# high = Only critical bugs auto-tracked (recommended)
# medium = Bugs and important findings
# low = Everything auto-tracked (creates many issues)
# Default: high
GITHUB_TRACK_THRESHOLD=high

# Dry run mode - preview issues without creating them
# true = Show what would be created (safe for testing)
# false = Actually create GitHub issues
# Default: false
GITHUB_DRY_RUN=false

# ============================================================================
# Optional: Model Preferences
# ============================================================================

# Default provider (anthropic or openai)
# If not set, will auto-detect based on which API key is available
# LLM_PROVIDER=anthropic

# ============================================================================
# Optional: Training Configuration
# ============================================================================

# MLX training settings (uncomment to override defaults)
# MLX_SEED=42
# MLX_BATCH_SIZE=4
# MLX_LEARNING_RATE=1e-5

# ============================================================================
# Optional: Logging & Debug
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Enable verbose output
# VERBOSE=false

# ============================================================================
# Git Automation Configuration (Optional)
# ============================================================================

# Enable automatic git operations in /auto-implement workflow
# When enabled, Step 8 will automatically commit, push, and create PRs
# Default: false (manual git operations only)
AUTO_GIT_ENABLED=false

# Enable automatic push to remote after commit
# Requires AUTO_GIT_ENABLED=true
# Default: false
AUTO_GIT_PUSH=false

# Enable automatic PR creation after push
# Requires AUTO_GIT_ENABLED=true and AUTO_GIT_PUSH=true
# Default: false
AUTO_GIT_PR=false

# ============================================================================
# Development Mode (Plugin Development Only)
# ============================================================================

# Enable development mode for autonomous-dev plugin development
# When true: Enables dev-specific commands and features for building the plugin
# When false: Normal user mode (default for marketplace distribution)
# Default: false (normal user mode)
DEV_MODE=false

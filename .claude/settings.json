{
  "description": "Claude Code Interaction Settings for autonomous-dev project",
  "version": "1.0.0",
  "interaction_style": {
    "autonomous_safe_operations": true,
    "philosophy": "Move fast on safe operations, confirm on risky ones"
  },
  "operations": {
    "safe_no_confirmation": [
      "Read",
      "Grep",
      "Glob",
      "git_status",
      "git_log",
      "git_diff",
      "Bash:find",
      "Bash:ls",
      "Bash:cat",
      "Bash:grep",
      "test_execution",
      "validation_checks",
      "code_analysis"
    ],
    "requires_confirmation": [
      "Bash:rm",
      "delete_files",
      "force_operations",
      "destructive_changes",
      "git_push_main",
      "git_force_push",
      "install_global",
      "uninstall_global",
      "breaking_api_changes"
    ]
  },
  "preferences": {
    "verbose_output": true,
    "show_command_results": true,
    "explain_reasoning": true
  }
}

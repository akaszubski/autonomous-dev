{
  "description": "Permission Batching Configuration - Reduce approval prompts by 80%",
  "permissionBatching": {
    "enabled": true,
    "autoApproveSafeReads": true,
    "autoApproveProjectWrites": true,
    "batchWindowSeconds": 5
  },
  "permissions": {
    "allow": [
      "Read:.*",
      "Grep:.*",
      "Glob:.*",
      "WebSearch:.*",
      "WebFetch:.*",
      "Task:.*",
      "TodoWrite:.*",
      "Write:src/.*",
      "Write:tests/.*",
      "Write:docs/.*",
      "Write:plugins/.*",
      "Write:scripts/.*",
      "Write:CLAUDE\\.md",
      "Write:CHANGELOG\\.md",
      "Write:README\\.md",
      "Edit:src/.*",
      "Edit:tests/.*",
      "Edit:docs/.*",
      "Edit:plugins/.*",
      "Edit:scripts/.*",
      "Edit:CLAUDE\\.md",
      "Edit:CHANGELOG\\.md",
      "Edit:README\\.md",
      "Bash:ls.*",
      "Bash:cat.*",
      "Bash:pwd",
      "Bash:wc.*",
      "Bash:echo.*",
      "Bash:python scripts/.*",
      "Bash:python -m pytest.*",
      "Bash:python plugins/.*",
      "Bash:python3.*<<.*EOF",
      "Bash:cd.*&&.*python.*",
      "Bash:git status",
      "Bash:git diff.*",
      "Bash:git log.*",
      "Bash:git add.*",
      "Bash:git commit.*",
      "Bash:npm test",
      "Bash:npm run.*",
      "Bash:pytest.*"
    ],
    "deny": [
      "Read:.*\\.ssh/.*",
      "Read:.*\\.aws/.*",
      "Read:.*\\.env$",
      "Write:.*\\.ssh/.*",
      "Write:.*\\.aws/.*",
      "Write:/etc/.*",
      "Write:/usr/.*",
      "Write:/System/.*",
      "Bash:.*rm -rf.*",
      "Bash:.*sudo.*",
      "Bash:.*git push --force.*",
      "Bash:.*git push -f.*",
      "Bash:.*git reset --hard.*"
    ],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "description": "Batch permission approver",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/batch_permission_approver.py"
          }
        ]
      }
    ]
  }
}

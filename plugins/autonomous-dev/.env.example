# GitHub Authentication
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo, read:org (repo scope needed for PR creation)
GITHUB_TOKEN=ghp_your_token_here

# Optional: GitHub repository (auto-detected from git remote if not set)
# GITHUB_REPO=owner/repository

# === PR Automation ===

# Default behavior for /pr-create command
# When true: Create draft PRs (requires explicit /pr-ready or manual approval before merge)
# When false: Create ready PRs (goes directly to review without draft stage)
# Recommended: true (for autonomous workflow safety)
PR_DEFAULT_DRAFT=true

# Default base branch for PR creation
# Used by /pr-create when --base flag not specified
PR_DEFAULT_BASE=main

# === Automatic Issue Tracking ===

# Enable automatic GitHub Issue creation from testing results
GITHUB_AUTO_TRACK_ISSUES=true

# === Trigger Points ===

# Run before git push (recommended - catches issues before CI/CD)
GITHUB_TRACK_ON_PUSH=true

# Run after each Claude Code prompt (background mode - real-time tracking)
GITHUB_TRACK_ON_PROMPT=false

# Run after each commit (optional - can be noisy)
GITHUB_TRACK_ON_COMMIT=false

# === Filtering ===

# Minimum priority to create issues
# Options: low, medium, high
# - high: Only test failures and architectural violations
# - medium: Includes UX issues (score < 7/10) and moderate optimizations
# - low: All findings including minor improvements
GITHUB_TRACK_THRESHOLD=medium

# Dry run mode (preview only, don't actually create issues)
GITHUB_DRY_RUN=false

# === Background Execution ===

# Run in background (non-blocking, silent)
# true: No interruption, check issues later with "gh issue list --label automated"
# false: Show output immediately (blocking)
GITHUB_TRACK_BACKGROUND=true

{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 plugins/autonomous-dev/hooks/pre_tool_use.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": {
      "Write": [
        "python .claude/hooks/auto_format.py"
      ],
      "Edit": [
        "python .claude/hooks/auto_format.py"
      ]
    },
    "PreCommit": {
      "*": [
        "python .claude/hooks/auto_test.py",
        "python .claude/hooks/security_scan.py"
      ]
    }
  }
}
